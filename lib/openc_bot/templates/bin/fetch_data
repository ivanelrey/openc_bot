#!/usr/bin/env ruby
require 'trollop'

opts = Trollop::options do
  opt :test, "Run in test mode", :short => 't'

end

command = 'bundle exec openc_bot rake bot:run'
options = { chdir: bot_proxy.directory }

_, stdout, stderr, wait_thread = Open3::popen3(command, options)
result = wait_thread.value
raise stderr.read unless result.success?
puts stdout.read
exit 0
